<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_weight="3"
        android:gravity="right|bottom"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/chatWarnFrom"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/ic_warning"
                android:visibility="invisible" />

            <ProgressBar
                android:id="@+id/chatProFrom"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="invisible" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/chatUserFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="用户名"
                android:padding="3dp"
                android:singleLine="true"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/bg_chatfrom"
                android:gravity="right"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/chatTimeFrom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:hint="2016-6-29"
                    android:singleLine="true"
                    android:textColor="@color/colorEF"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/chatContentFrom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="消息内容"
                    android:padding="3dp"
                    android:textColor="@color/colorEF"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>